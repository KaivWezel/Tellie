<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head.ejs') %>
	<body>
		<%- include('./partials/nav.ejs') %>
		<main>
			<% if (list.length > 0) { %>
			<h1>Deze wedstrijden vinden momenteel plaats</h1>
			<ul>
				<% list.forEach(game => { %>
				<li>
					<a href="/score/<%= game.id%>">
						<div class="team teamA">
							<%= game.teamA %>
							<span><%= game.scoreA %></span>
						</div>
						<div class="team teamB">
							<%= game.teamB %>
							<span><%= game.scoreB%></span>
						</div>
					</a>
				</li>
				<% }) %>
			</ul>
			<% } else { %>
			<h1>Er zijn nog geen wedstrijden bezig</h1>
			<a href="/create-game">Maak er een aan</a>
			<% } %>
		</main>
	</body>
</html>
